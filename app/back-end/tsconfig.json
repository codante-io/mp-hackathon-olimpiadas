{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "types": ["node"],
  "typeRoots": ["node_modules/@types"]
}